
<%= simple_form_for(@instrument) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :brand, collection: Instrument::BRAND, prompt: "select brand:"%>
    <%= f.input :model %>
    <%= f.input :description %>
    <%= f.input :condition, collection: Instrument::FINISH, prompt: "select:"  %>
    <%= f.input :finish, collection: Instrument::CONDITION, prompt: "select:" %>
    <%= f.input :title %>
    <%= f.input :price %>
    <%= f.file_field :image %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
